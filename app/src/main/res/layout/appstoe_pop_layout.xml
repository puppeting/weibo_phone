<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              app:rv_cornerRadius="10dp"
            app:rv_backgroundColor="@color/bg_color"
            app:rv_strokeColor="@color/bg_color"
            app:rv_strokeWidth="1dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
           >

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="275dp"
                android:minHeight="130dp"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                     android:padding="@dimen/dimens4"
                    android:textColor="@color/color_666"
                    android:textSize="12sp"
                    android:background="@drawable/shape_fang_lv_zheng"
                    tools:ignore="MissingConstraints" />
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dimen6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件简介"
                     android:textColor="@color/color_333"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />
                <TextView
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者：张三"
                    android:paddingTop="@dimen/dimens4"
                    android:paddingBottom="@dimen/dimens4"
                    android:paddingLeft="@dimen/dimen6dp"
                    android:paddingRight="@dimen/dimen6dp"
                    android:textColor="@color/color_666"
                    android:textSize="10sp"
                    android:layout_marginLeft="@dimen/dimens4"
                    android:background="@drawable/shape_zuozhe"
                    tools:ignore="MissingConstraints" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1px"
                    />
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者：张三"
                    android:padding="@dimen/dimens4"
                    android:textColor="@color/color_666"
                    android:textSize="12sp"
                    android:background="@mipmap/icon_close"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_ddd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       视频比例应该是16：9的，注意原型里面绿框部分，按钮可以浮在视频上面（这个地方绿框类似于抖音是个播放页面，可以播放短视频，上面的操作按钮是可以隐藏的，比如你在观看腾讯视频电视剧的时候，点击视..."
                    android:padding="@dimen/dimens10"
                    android:textColor="@color/color_text_title"
                    android:textSize="12sp"
                    android:layout_margin="@dimen/sp_12"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent">


                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                         android:gravity="center"
                        android:padding="@dimen/dimens10"
                        android:text="安装"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="36dp"
                        android:background="@drawable/shape_login"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/sp_20"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

        </com.flyco.roundview.RoundLinearLayout>


    </LinearLayout>
</layout>