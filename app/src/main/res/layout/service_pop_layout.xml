<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">


        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
             app:rv_cornerRadius="@dimen/dimens10"
            app:rv_strokeWidth="1dp"
            app:rv_strokeColor="@color/white"
            app:rv_backgroundColor="@color/white"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="275dp"
                android:minHeight="130dp"
                android:padding="@dimen/dimens10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务简介"
                    android:paddingTop="5dp"
                    android:paddingBottom="@dimen/sp_12"
                    android:textColor="@color/color_333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_ddd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    服务简介应该是16：9的，注意原型里面绿框部分，按钮可以浮在视频上面（这个地方绿框类似于抖音是个播放页面，可以播放短"
                    android:paddingTop="@dimen/dimen_15"
                    android:paddingRight="@dimen/dimen6dp"
                    android:paddingLeft="@dimen/dimen6dp"
                    android:textColor="@color/color_333"
                    android:textSize="12sp"
                     tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                         android:gravity="center"
                         android:text="开通"

                        android:background="@drawable/shape_login"
                        android:textColor="@color/white"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="@dimen/dimen_20sp"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

        </com.flyco.roundview.RoundLinearLayout>


    </LinearLayout>
</layout>