<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:layout_margin="30dp"
            app:rv_cornerRadius="6dp"
            app:rv_backgroundColor="@color/bg_color"
            app:rv_strokeColor="@color/bg_color"
            app:rv_strokeWidth="1dp"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/dimens10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="弹幕设置"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/dimen6dp"
                    android:layout_marginBottom="@dimen/sp_14"
                     android:textColor="@color/color_333"
                    android:textSize="16sp"
                    tools:ignore="MissingConstraints" />
                <Switch
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_setting_white_circle_selector"
                    android:track="@drawable/switch_selector_setting"
                    />
            </LinearLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="@color/color_ddd" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/sp_20"
                    android:layout_height="wrap_content">
                    <TextView
                         android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="默认直播间"
                        android:layout_marginLeft="@dimen/dimens10"
                         android:textColor="@color/color_333"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />
                    <com.flyco.roundview.RoundLinearLayout

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:rv_cornerRadius="5dp"
                        app:rv_backgroundColor="@color/white"
                        app:rv_strokeColor="@color/white"
                        app:rv_strokeWidth="1dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_search"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:hint="XXX直播间"
                            android:padding="@dimen/dp_4"
                            android:textColorHint="#868686"
                            android:textSize="@dimen/sp_12" />
                    </com.flyco.roundview.RoundLinearLayout>
                    <TextView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:text=""
                        android:background="@mipmap/bianji"
                         android:textColor="@color/color_text_title"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:layout_marginRight="@dimen/dimens10"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="或者"
                     android:textColor="@color/color_666"
                    android:textSize="10sp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="90dp"
                     tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimens10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="直播间地址"
                        android:layout_marginLeft="@dimen/dimens10"
                         android:textColor="@color/color_333"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />
                    <com.flyco.roundview.RoundLinearLayout

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:rv_cornerRadius="5dp"
                        app:rv_backgroundColor="@color/white"
                        app:rv_strokeColor="@color/white"
                        app:rv_strokeWidth="1dp">

                        <androidx.appcompat.widget.AppCompatEditText
                             android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:hint="XXX直播间"
                            android:padding="@dimen/dp_4"
                            android:textColorHint="#868686"
                            android:textSize="@dimen/sp_12" />
                    </com.flyco.roundview.RoundLinearLayout>
                    <TextView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:text=""
                        android:background="@mipmap/bianji"
                        android:padding="@dimen/dimens10"
                        android:textColor="@color/color_text_title"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:layout_marginRight="@dimen/dimens10"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimens10"
                    android:layout_marginTop="@dimen/dimens10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen6dp"
                        android:paddingTop="@dimen/dimen6dp"
                        android:textSize="@dimen/dimen_10sp"
                        android:text="进入"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/xuan1"
                        android:textColor="@color/color_333" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen6dp"
                        android:paddingTop="@dimen/dimen6dp"
                        android:text="送礼"    
                        android:textSize="@dimen/dimen_10sp"
                        android:gravity="center"

                        android:drawableLeft="@mipmap/weixuan" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"

                        android:paddingBottom="@dimen/dimen6dp"
                        android:paddingTop="@dimen/dimen6dp"
                        android:text="嘉年华"
                        android:textSize="@dimen/dimen_10sp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/weixuan"  />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen6dp"
                        android:paddingTop="@dimen/dimen6dp"
                        android:text="自动感谢"
                        android:textSize="@dimen/dimen_10sp"
                        android:drawableLeft="@mipmap/weixuan"  />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="140dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                         android:gravity="center"
                        android:padding="@dimen/dimens10"
                        android:text="确定"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="36dp"
                        android:background="@drawable/shape_login"
                        android:textColor="@color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="@dimen/dimens10"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

        </com.flyco.roundview.RoundLinearLayout>


    </LinearLayout>
</layout>