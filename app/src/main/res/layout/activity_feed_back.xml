<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.mine.FeedBackActivity">
    <include layout="@layout/action_bar_custom3"/>
    <LinearLayout
        android:id="@+id/ll_fuwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@drawable/shape_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimens10"
        android:paddingTop="@dimen/dimens10"
        android:paddingRight="@dimen/dimens10">

        <LinearLayout
            android:id="@+id/relative_seeting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="@{(v)->presenterClick.onClick(v)}"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    您的称呼"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    张三"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/color_666"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_ddd"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            />
        <LinearLayout
             android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="@{(v)->presenterClick.onClick(v)}"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    联系方式"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    13915297104"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@color/white"
                android:textColor="@color/color_666"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_ddd"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            />
        <LinearLayout
             android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="@{(v)->presenterClick.onClick(v)}"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    问题类型"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    售前  "
                android:textColor="@color/color_666"
                android:layout_marginRight="@dimen/dp_8"
                android:drawableRight="@mipmap/icon_you_hui"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_ddd"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            />
        <LinearLayout
             android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="@{(v)->presenterClick.onClick(v)}"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    反馈标题"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:text="    标题名称"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/color_666"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_ddd"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            />
        <LinearLayout
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical|right"
            android:onClick="@{(v)->presenterClick.onClick(v)}"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:layout_marginLeft="@dimen/sp_14"
                android:text="问题描述"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="请输入问题描述"
                android:textSize="@dimen/sp_12"
                android:gravity="start"
                android:paddingLeft="@dimen/dimens10"
                android:textColor="@color/color_888"
                android:background="@color/white"
                android:layout_margin="@dimen/dp_8"
                />
            <ImageView
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_15"
                android:background="@mipmap/maike"

                />
            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/et_khdz_lay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:rv_cornerRadius="2dp"
                android:visibility="gone"
                app:rv_strokeColor="@color/line"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dimens10"
                android:layout_marginRight="@dimen/dimens10"
                android:layout_marginBottom="@dimen/dimens10"
                app:rv_strokeWidth="1dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入问题描述"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_888"
                    android:background="@color/white"
                    android:layout_margin="@dimen/dp_8"
                    />
            </com.flyco.roundview.RoundLinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_ddd"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="@{(v)->presenterClick.onClick(v)}"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens4"
                android:layout_marginLeft="@dimen/sp_14"
                android:text="相关截图"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/dp_8"
                    >
                    <LinearLayout
                        android:id="@+id/iv_add"
                        android:layout_marginTop="6dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:background="@drawable/shape_kou_hui_bian"
                        android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/sp_20"
                         android:background="@mipmap/add_pic"
                        />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_666"
                            android:gravity="center"
                            android:text="添加图片"
                            android:layout_marginTop="@dimen/dimen6dp"
                            />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_del"
                         android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                         android:layout_marginLeft="@dimen/dimens10"
                         android:gravity="center">
                        <ImageView
                            android:id="@+id/iv_add1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_fang"
                            />
                        <TextView
                            android:layout_width="@dimen/sp_20"
                            android:layout_height="@dimen/sp_20"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_666"
                            android:gravity="center"
                            android:text=" "
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/sahnchu"
                             />
                    </RelativeLayout>
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:text="提交"
        android:textSize="14sp"
        android:background="@drawable/shape_login"
        android:paddingRight="60dp"
        android:paddingTop="@dimen/dimens10"
        android:paddingBottom="@dimen/dimens10"
        android:layout_margin="@dimen/dimen_30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white" />
</LinearLayout>