<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:layout_margin="30dp"
            app:rv_cornerRadius="6dp"
            app:rv_backgroundColor="@color/bg_color"
            app:rv_strokeColor="@color/bg_color"
            app:rv_strokeWidth="1dp"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="275dp"
                android:minHeight="130dp"
                android:padding="@dimen/dimens10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="推流设置"
                    android:paddingTop="5dp"
                    android:paddingBottom="@dimen/dimens10"
                    android:textColor="@color/color_333"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_ddd" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/sp_20"
                    android:layout_marginLeft="@dimen/dimen_30dp"
                    android:layout_height="wrap_content">
                    <TextView
                         android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="推流地址"
                         android:textColor="@color/color_333"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />
                    <com.flyco.roundview.RoundLinearLayout

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_25"
                        android:layout_height="wrap_content"
                        app:rv_cornerRadius="5dp"
                        app:rv_backgroundColor="@color/white"
                        app:rv_strokeColor="@color/white"
                        app:rv_strokeWidth="1dp">

                        <androidx.appcompat.widget.AppCompatEditText
                             android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@null"
                            android:hint=" "
                             android:textColorHint="#868686"
                            android:textSize="@dimen/sp_12" />
                    </com.flyco.roundview.RoundLinearLayout>

                </LinearLayout>
                 <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimens10"
                     android:layout_marginLeft="@dimen/dimen_30dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="秘钥"
                         android:textColor="@color/color_333"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints" />
                    <com.flyco.roundview.RoundLinearLayout

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:rv_cornerRadius="5dp"
                        android:layout_marginRight="@dimen/margin_25"
                        app:rv_backgroundColor="@color/white"
                        app:rv_strokeColor="@color/white"
                        app:rv_strokeWidth="1dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_search"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:hint=" "
                            android:padding="@dimen/dp_4"
                            android:textColorHint="#868686"
                            android:textSize="@dimen/sp_12" />
                    </com.flyco.roundview.RoundLinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                         android:gravity="center"
                         android:text="确定"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="36dp"
                        android:background="@drawable/shape_login"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

        </com.flyco.roundview.RoundLinearLayout>


    </LinearLayout>
</layout>