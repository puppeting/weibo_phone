<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="presenterClick"
            type="com.pzbao.microphoto.config.PresenterClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_333"
        tools:context=".ui.mine.CustomServiceActivity">

        <include
            android:id="@+id/action_bar_custom"
            layout="@layout/action_bar_custom2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_fuwu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="60dp"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@drawable/shape_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimens10"
                android:paddingTop="@dimen/dimens10"
                android:paddingRight="@dimen/dimens10">

                <LinearLayout
                    android:id="@+id/relative_seeting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/white"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/margin_25"
                    android:gravity="center_vertical"
                    android:onClick="@{(v)->presenterClick.onClick(v)}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimens4"
                        android:text="    您要定制的服务类型"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/icon_you_hui" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_ddd"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                      />
                <LinearLayout
                    android:id="@+id/relative_dingzhi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center_vertical"

                    android:onClick="@{(v)->presenterClick.onClick(v)}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimens4"
                        android:text="    涉及的行业"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/icon_you_hui" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_ddd"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    />
                <LinearLayout
                    android:id="@+id/ll_sucai"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center_vertical"

                    android:onClick="@{(v)->presenterClick.onClick(v)}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimens4"
                        android:text="    理想的风格"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/icon_you_hui" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_ddd"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    />
                <LinearLayout
                    android:id="@+id/ll_fenxiang"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="@{(v)->presenterClick.onClick(v)}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimens4"
                        android:text="    主文案"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/icon_you_hui" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_ddd"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    />
                <LinearLayout
                    android:id="@+id/ll_question"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="@{(v)->presenterClick.onClick(v)}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimens4"
                        android:text="    副文案"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/icon_you_hui" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_ddd"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    />

                <LinearLayout
                    android:id="@+id/ll_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical|right"
                    android:onClick="@{(v)->presenterClick.onClick(v)}"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimens4"
                        android:layout_marginLeft="@dimen/sp_14"
                        android:text="简单描述"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="请输入简单描述"
                        android:textSize="@dimen/sp_12"
                        android:gravity="start"
                        android:paddingLeft="@dimen/dimens10"
                        android:textColor="@color/color_888"
                        android:background="@color/white"
                        android:layout_margin="@dimen/dp_8"
                        />
                    <ImageView
                        android:layout_width="@dimen/dimen_15"
                        android:layout_height="@dimen/dimen_15"
                        android:background="@mipmap/maike"

                        />
                    <com.flyco.roundview.RoundLinearLayout
                         android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:rv_cornerRadius="2dp"
                        android:visibility="gone"
                        app:rv_strokeColor="@color/line"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:layout_marginRight="@dimen/dimens10"
                        android:layout_marginBottom="@dimen/dimens10"
                        app:rv_strokeWidth="1dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入问题描述"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/color_888"
                            android:background="@color/white"
                            android:layout_margin="@dimen/dp_8"
                            />
                    </com.flyco.roundview.RoundLinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_ddd"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="@dimen/dp_4"
                    />
                <com.flyco.roundview.RoundLinearLayout
                    android:id="@+id/et_khdz_lay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:rv_cornerRadius="2dp"
                    android:visibility="gone"
                    app:rv_strokeColor="@color/line"
                    android:layout_marginLeft="@dimen/dimens10"
                    android:layout_marginRight="@dimen/dimens10"
                    android:layout_marginBottom="@dimen/dimens10"
                    app:rv_strokeWidth="1dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入问题描述"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_888"
                        android:background="@color/white"
                        android:layout_margin="@dimen/dp_8" />
                </com.flyco.roundview.RoundLinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@mipmap/dingzhi_tou" />
        </RelativeLayout>

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
             android:text="提交"
            android:textSize="14sp"
            android:background="@drawable/shape_login"
            android:layout_margin="@dimen/dimen_30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>